@using Controls.Css
@using Controls.Tabs
@using System.Drawing
@using static Controls.Colors.ColorExtensions

<Tab
    Content=Content
    ChildContent=ChildContent
    IsDefault=IsDefault
    OnSelect=OnSelect
    DefaultColors=defaultColors
    HoverColors=hoverColors
    SelectedColors=selectionColors
>

</Tab>

@code {
    private static readonly Styles defaultColors = new(new Style("color", Color.Black.ToRGBStyle()), new Style("border-bottom-color", Color.Transparent.ToRGBStyle())),
            selectionColors = new(new Style("color", Color.Black.ToRGBStyle()), new Style("border-bottom-color", Color.FromArgb(0, 158, 247).ToRGBStyle())),
            hoverColors = new(new Style("color", Color.Black.ToRGBStyle()), new Style("border-bottom-color", Color.FromArgb(0, 158, 247).ToRGBStyle()));

    [Parameter, EditorRequired]
    public RenderFragment? Content { get; set; }

    [Parameter, EditorRequired]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool IsDefault { get; set; }

    [Parameter]
    public EventCallback OnSelect { get; set; }
}
