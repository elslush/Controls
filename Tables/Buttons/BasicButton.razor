@using Controls.CssStates

<Button 
    Href="@Href"
    Style="@Style"
    OnClick="OnClick"
    OnHover="OnHover"
    ChildContent="ChildContent"
>
</Button>

@code {
    private bool isHovered;

    private string Style => isHovered ? HoverColors.Value : DefaultColors.Value;

    [Parameter]
    public string? Href { get; set; }

    [Parameter, EditorRequired]
    public CssStyle DefaultColors { get; init; }

    [Parameter, EditorRequired]
    public CssStyle HoverColors { get; init; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter, EditorRequired]
    public RenderFragment? ChildContent { get; set; }

    private void OnHover(bool isHovered) => this.isHovered = isHovered;
}
