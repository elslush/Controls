@if (Inline)
{
    <code class="hljs hljs-inline @ColorModeStyle">
        @ChildContent
    </code>
}
else
{
    <pre class="code">
        <code class="hljs hljs-block @ColorModeStyle">
            @ChildContent
        </code>
    </pre>
}


@code {
    private string ColorModeStyle => Mode switch
    {
        ColorMode.Light => "light",
        ColorMode.Dark => "dark",
        _ => string.Empty,
    };

    [Parameter, EditorRequired] 
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public ColorMode Mode { get; set; } = ColorMode.Light;

    [Parameter]
    public bool Inline { get; set; }

    public enum ColorMode
    {
        Light,
        Dark,
    }
}
