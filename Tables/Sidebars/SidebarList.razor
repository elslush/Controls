@using Controls.Lists;
@using Controls.Buttons;

<ClientList 
    Items="Items"
    Context="item"
    TItem="ISidebarItem"
>
    <ItemTemplate>
        @switch(item.ItemType)
        {
            case SidebarItemType.NavHeader:
                <SidebarNavHeader Item="(NavHeader)item"></SidebarNavHeader>
                break;
            case SidebarItemType.NavItem:
                <SidebarNavItem Item="(NavItem)item"></SidebarNavItem>
                break;
        }
    </ItemTemplate>
</ClientList>

@code {
    [Parameter]
    public IEnumerable<ISidebarItem> Items { get; set; } = Enumerable.Empty<ISidebarItem>();
}
