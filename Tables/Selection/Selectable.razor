@switch (SelectionType)
{
    case SelectionType.None:
        @Content
        break;
    case SelectionType.Highlight:
        <a href="#" class="selectable @Class" @onclick="Click">
            @Content
        </a>
        break;
    case SelectionType.Radio:
        <div class="selection-group">
            <div class="selection-group-prepend">

            </div>
        </div>
        break;
}


@code {
    [Parameter]
    public bool IsClicked { get; set; }

    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public EventCallback<bool> OnSelect { get; set; }

    [Parameter]
    public SelectionType SelectionType { get; set; } = SelectionType.None;

    private string? Class => IsClicked ? "selected" : null;

    private Task Click()
    {
        IsClicked = !IsClicked;
        StateHasChanged();
        return OnSelect.InvokeAsync(IsClicked);
    }
}
